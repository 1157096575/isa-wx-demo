page{
  padding: 20rpx;
}
.box{
  padding: 30rpx;
  box-shadow: 0 0 16rpx rgba(0,0,0,0.2);
  margin-bottom:20rpx;
}

.scroll-view{
  max-height: 300rpx;
  width: 100%;
}
.scroll-view-item{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 0 0 20rpx;
  color: var(--theme-color);
  font-weight: 700;
  font-style: italic;
}

.scroll-view-item:nth-child(odd){
  background: #f2f2f2;
}
.scroll-view-item:nth-child(even){
  background: rgba(63, 161, 226, 0.8);
}